<!doctype html>
<html {{ site.language_attributes }}>
<head>
    <meta charset="{{ site.charset }}" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    {% set theme_color = get_option('theme_color') %}
    {% if theme_color %}
    <meta name="theme-color" content="{{ theme_color }}" />
    {% endif %}
    <meta name="color-scheme" content="light" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap" rel="stylesheet">
    {% set site_icon = get_option('site_icon') %}
    {% if site_icon %}
    <link rel="icon" href="{{ site.url }}/icon.svg?ver={{ assets }}" type="image/svg+xml">
    <link rel="icon" href="{{ site.url }}/favicon.ico?ver={{ assets }}" sizes="48x48">
    <link rel="icon" href="{{ site.url }}/favicon2x.png?ver={{ assets }}" sizes="64x64" type="image/png">
    <link rel="icon" href="{{ site.url }}/favicon-114.png?ver={{ assets }}" sizes="114x114" type="image/png">
    <link rel="icon" href="{{ site.url }}/favicon-144.png?ver={{ assets }}" sizes="144x144" type="image/png">
    <link rel="apple-touch-icon" href="{{ site.url }}/apple-touch-icon.png?ver={{ assets }}" sizes="180x180">
    <link rel="manifest" href="{{ site.url }}/manifest.webmanifest?ver={{ assets }}">
    {% endif %}
    {{ function('wp_head') }}
</head>
